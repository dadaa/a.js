.svg
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  padding: 5px
  background-color: rgba(black, 0.5)
  border-radius: 5px
  display: none
  opacity: 0

.visible
  display: block
  animation-name: fade-in
  animation-duration: 0.5s
  animation-fill-mode: both

@keyframes fade-in
  0%
    opacity: 0

  100%
    opacity: 1